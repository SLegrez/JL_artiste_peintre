<% if notice %>
  <div class="flash flash-success alert alert-dismissible fade show" role="alert"><%= (t :flash_notice_html) %><a data-dismiss="alert" aria-label="Close">
      <i class="fas fa-times"></i>
    </a>
  </div>
<% end %>
<% if alert %>
  <div class="flash flash-danger alert alert-dismissible fade show" role="alert"><%= (t :flash_alert_html) %><a data-dismiss="alert" aria-label="Close">
      <i class="fas fa-times"></i>
    </a>
  </div>
<% end %>